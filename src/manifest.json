{
  "name": "Read Later",
  "description": "Saves tabs and read later",
  "version": "0.1.4",
  "minimum_chrome_version": "24",

  "manifest_version": 2,

  "background": {
      "scripts": ["js/utils.js",
                  "js/background.js",
                  "js/storage.js",
                  "js/contextMenu.js"
                  ],
      "persistent": false
    },

  "browser_action": {
    "default_icon": "img/icon38_active.png",
    "default_title": "Read Later",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "commands": {
    "read-later": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "A quick way to save&close current tab to read later"
    },

    "_execute_browser_action": {
      "suggested_key": {
        "default" : "Ctrl+Shift+L"
      }
    }
  },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/*; object-src 'self'",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "webNavigation",
    "contextMenus",
    "chrome://favicon/*",
    "https://maxcdn.bootstrapcdn.com/bootstrap/*",
    "https://ajax.googleapis.com/ajax/*",
    "<all_urls>"
  ]
}
