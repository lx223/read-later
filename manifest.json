{
  "name": "Read Later",
  "description": "This extension saves and closes current tab and allows it to be read later.",
  "version": "0.1.0",
  "minimum_chrome_version": "24",

  "manifest_version": 2,

  "background": {
      "scripts": ["js/eventPage.js",
                  "js/utils.js",
                  "js/background.js",
                  "js/storage.js"
                  ],
      "persistent": false
    },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Read Later",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "chrome://favicon/*",
    "https://ajax.googleapis.com/"
  ]
}
